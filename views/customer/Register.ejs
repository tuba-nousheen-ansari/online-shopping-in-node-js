<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE-edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- font awesome cdn link  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link rel="stylesheet" href="/css/CustomerReg.css">
    <title>Registration</title>
</head>

<body>
    <%-include("../partial/customer/Navigation.ejs")%>
        <div class="container">
            <form action="/register" method="post">
                <div class="content">
                    <h2 class="header">Registration</h2>
                    <div class="name">
                        <label for="fullName">Full Name</label>
                        <input onkeyup="validateName()" type="text" id="fullName" spellcheck="false"
                            data-ms-editor="true" name="name" placeholder="Full name" autocomplete="off"
                            class="form-control" required>
                        <small id="nameError"></small>
                    </div>
                    <div class="email">
                        <label>Email Address</label>
                        <input onkeyup="validateEmail()" type="email" id="email" spellcheck="false"
                            data-ms-editor="false" name="email" placeholder="Email Address" autocomplete="off" class="form-control"
                            required>
                        <small id="emailError"></small>
                    </div>
                    <div class="number">
                        <label>Mobile Number</label>
                        <input onkeyup="validateMobile()" type="text" id="number" spellcheck="false"
                            data-ms-editor="true" placeholder="Mobile Number" name="mobile" autocomplete="off" class="form-control"
                            required>
                        <small id="numberError"></small>
                    </div>
                    <div class="address">
                        <label>Address</label>
                        <input onkeyup="validateAddress()" name="address" type="text" id="address" spellcheck="false"
                            data-ms-editor="true" placeholder="Address" autocomplete="off" class="form-control" required>
                    </div>
                    <div class="address">
                        <label>Address</label>
                        <input onkeyup="validateAddress()" name="gender" type="text" id="address" spellcheck="false"
                            data-ms-editor="true" placeholder="Gender" autocomplete="off" class="form-control" required>
                    </div>
                    <div class="password">
                        <label for="password">Enter password</label>
                        <input type="password" name="password" id="password" placeholder="Password" class="form-control"
                            required>
                        <p max="4" id="password-strength-meter"></p>
                        <p id="password-strength-text"></p>
                        <small id="showHidePass" onclick="showPassword()" class="text-primary">Show password</small>
                    </div>
                    <div class="confirmpassword">
                        <label>Confirm Password</label>
                        <input onkeyup="validateCPassword()" type="password" id="confirmPassword" spellcheck="false"
                            data-ms-editor="true" placeholder="Confirm Password" autocomplete="off" class="form-control"
                            required>
                        <small id="confirmPasswordError"></small>
                    </div>
                    <div class="button">
                        <input type="submit" value="Register" onclick="return validateData()" class="btn btn-primary">
                    </div>
                </div>

        </div>
        </div>
        </form>

        <script src="/js/Customer.js"></script>
        <script type="text/javascript" src="/js/Register.js"></script>
</body>

</html>