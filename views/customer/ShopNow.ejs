<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Geek Hardwares</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">


    <!-- custom css file link  -->
    <!-- <link rel="stylesheet" href="../../public/css/CustomerCss.css"> -->
    <link rel="stylesheet" href="/css/CustomerCss.css">

    <link rel="stylesheet"  href="/css/CustomerCss.css">


</head>

<body>
    <%-include("../partial/customer/Navigation.ejs")%>

    
    <section class="product" id="product">

        <h1 class="heading">All <span>Product</span></h1>

        <div class="box-container">

            <%
                for(var i=0; i<result.length; i++)  
                {
            %>

                    <div class="box">
                        <span class="discount">-33%</span>
                        <div class="icons">
                            <a href="#" class="fas fa-heart"></a>
                            <a href="#" class="fas fa-share"></a>
                            <a href="#" class="fas fa-eye"></a>
                        </div>
                        <img src="images/<%=result[i].pro_image%>" alt="">
                        <h3><%=result[i].pro_name%></h3>
                        <div class="stars">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star-half-alt"></i>
                        </div>
                        <div class="price"> Rs<%=result[i].pro_price%> <span> Rs. <%=result[i].pro_price-(13.20)%> </span> </div>
                        <div class="quantity">
                            <span>quantity : </span>
                            <input type="number" min="1" max="1000" value="1">
                            <span> /pc </span>
                        </div>
                        <a href="#" class="btn">add to cart</a>
                    </div>
            <%
                }
            %>

        </div>
    </section>
    <!-- deal section ends -->

    <!-- contact section starts  -->

    

   <%-include("../partial/customer/Footer.ejs")%>
    <script src="js/Customer.js"></script>

</body>

</html>